.container{
  
  height: auto;
}

.head {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-around;
  background-color: #0d8fef;
  color: white;
  font-size: 34rpx;
  padding: 32rpx 6rpx 36rpx 0;
  overflow:auto;/* winphone8å’Œandroid4+ */
-webkit-overflow-scrolling: touch; /* ios5+ */
}


.goods {
  flex: 2;
  text-indent: 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item {
  flex: 1;
  text-align: center;
}

.content {
  width: 100%;
}
.letter{
  /* text-indent: 20rpx; */
  font-size: 0;
  height: 0;
}
.content .listItem {
  width: 100%;
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  flex: 1;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.content .listItem .elem {
  background-color: #fff;
  height: 120rpx;
  line-height: 120rpx;
  position: relative;
}

.content .listItem .elem .input {
  /* height: 120rpx; */
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: #333;
}

.checkbox .wx-checkbox-input {
  margin-right: 5px;
  -webkit-appearance: none;
  appearance: none;
  outline: 0;
  border: 1px solid #d1d1d1;
  background-color: #fff;
  border-radius: 3px;
  width: 36rpx;
  height: 36rpx;
  position: relative;
  top: -2px;
}

.btm{
  height: 109rpx;
}

.report {
  font-size: 28rpx;
  color: #0d8fef;
  text-align: center;
  padding: 10rpx;
}
.line{
  width: 140rpx;
  height: 1px;
  background-color: #0d8fef;
  margin: 0 auto;
}


.index-english{
    position: absolute;
    width: 40rpx;
    height: auto;
    left: 0;
    font-size: 26rpx;
    text-align: center;
    color: #0d8fef;
    padding: 8rpx 0;
    padding-bottom: 20rpx;
}
.index-english view{
    height: 15px;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}
