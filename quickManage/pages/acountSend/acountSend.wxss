.container{
  
}
.tab{
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-radius: 6px;
  overflow: hidden;
  margin-top: 40rpx;
}
.tab-item{
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.tab-item-income{
  border-radius: 6px 0 0 6px;
}
.tab-item-pay{
  border-radius: 0 6px 6px 0;
}
.tab-item-active{
  background-color: #0d8fef;
  color: #fff;
}
.content {
  height: 402rpx;
  background-color: #fff;
  margin-top: 48rpx;
  overflow: hidden;
  padding-top: 98rpx;
}

.content .section {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 0 40rpx; 
}
.content .section:nth-of-type(2){
  margin: 68rpx 0;
}
.content .section .picker{
  border-bottom: 1px #ececec solid;
  height: 52rpx;
  width: 100%;
  text-indent: 20rpx;
}
.content .section .picker-elem{
  height: 58rpx;
}
.content .section .input{
  margin-left: 6rpx;
  width: 100%;
  height: 42rpx !important;
  line-height: 32rpx;
  font-size: 30rpx;
  border-bottom: 1px #ececec solid;
  text-indent: 20rpx;
  padding-left: 20rpx;
  padding-bottom: 6rpx;
  position: relative;
  top: -4rpx;
}
.section-title{
  width: 172rpx;
}

.button {
  width: 270rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  margin-top: 60rpx;
  background: #fff;
  border-radius: 6px;
}
