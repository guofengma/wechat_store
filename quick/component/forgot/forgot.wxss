.container {
  background-color: #fff;
  padding-top: 50rpx;
  overflow: hidden;
}

.buybg {
  position: absolute;
  width: 100%;
  height: 200rpx;
}

.movie {
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  width: 350rpx;
  height: 280rpx;
}

.name {
  z-index: 99;
  position: absolute;
  left: 430rpx;
  top: 120rpx;
  color: #fff;
}

.actor {
  z-index: 99;
  position: absolute;
  left: 430rpx;
  top: 220rpx;
  color: #666;
}

.area {
  position: absolute;
  top: 400rpx;
  width: 90%;
  padding: 30rpx;
  text-align: center;
  color: #666;
}

.line {
  width: 86%;
  height: 0;
  border-bottom: #ddbf90 1px dashed;
  position: absolute;
  top: 540rpx;
  padding: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.buy {
  /* z-index: 1000; */
  position: absolute;
  top: 20rpx;
  left: 36rpx; 
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.button {
  /* top: 960rpx; */
  width: 400rpx;
  height: 80rpx;
  margin: 20rpx auto 0;
  text-align: center;
  line-height: 80rpx;
  background-color: #0D8FEF;
  color: #FFFFFF;
  margin-top: 280rpx;
  border-radius: 4px;
  font-size: 32rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 30rpx 0;
}

.price {
  color: #dc0606;
  width: 80%;
   line-height: 50rpx;
}

.inp {
  margin-left: 20rpx;
}

.sendcode {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 80%;
}

.title {
  width: 100rpx;
  margin-right: 30rpx;
  line-height: 56rpx;
  /* border: 1px #dc0606 solid; */
}

.send {
  color: #0D8FEF;
  border: 1px #0D8FEF solid;
  min-width: 120rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #FFFFFF;
  margin-left: 20rpx;
}

.forgot{
  border-radius: 4px;
}

.input{
  width: 100%;
  border-bottom: 1px solid #F4F4F4;
}

.placehoder{
  font-size: 26rpx;
  color: #999999;
}

.prompt{
  font-size: 24rpx;
  margin-top: 32rpx;
  color: #DC0606;
}