.img{
  width: 100%;
  height: 3264rpx;
}

.section{
  position: absolute;
  top: 190rpx;
  left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.section_input{
  width: 320rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4px 0 0 4px;
  text-align: center;
  display: inline-block;
}

.placehoder{
  color: #fff;
  font-size: 28rpx;
}

.button{
  width: 92rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #0D8FEF;
  border-radius: 0 4px 4px 0;
}

.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1000;
  text-align: center;
}

.mask-content{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

