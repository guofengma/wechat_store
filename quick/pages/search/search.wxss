
.container {
  height: 100%;
  position: relative;
  background-color: #fff;
}

.header {
  background: #0d8fef;
  padding: 30rpx 40rpx;
  position: relative;
}

.search {
  background: #fff;
  border-radius: 4px;
  height: 60rpx;
  padding-left: 30rpx;
}

.search-btn{
  top: 0;
  position: absolute;
  right: 0;
  width: 140rpx;
  text-align: center;
  height: 100%;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #fff;
}

.left{
  margin-right: 100rpx; 
  position: relative;
}

.delete{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 22rpx;
  height: 20rpx;
  z-index: 1000;
  padding: 4rpx;
}

.address{
  width: 36rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item{
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  border-bottom: 1px solid #ECECEC;
}


