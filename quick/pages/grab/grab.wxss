.container{
  height: 100%;
  position: relative;
}
.header {
  background: #0d8fef;
  padding: 30rpx 40rpx;
  position: relative;
}

.search {
  margin-right: 150rpx;
  background: #fff;
  border-radius: 4px;
  height: 60rpx;
  padding-left: 30rpx; 
}

.city {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.cityname {
  margin-right: 16rpx;
  font-size: 30rpx;
  color: #fff;
}

.arrow {
  width: 24rpx;
  height: 12rpx;
  position: relative;
  transform: translateY(-40%);
}

.arrowOpen{
  width: 24rpx;
  height: 12rpx;
  position: relative;
  top: -6rpx;
  -webkit-transform: rotate(180deg);
  transform: rotate(180deg);
}

.citylist{
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  white-space:normal;
  pointer-events:auto;

}

.city-item{
  width: 25%;
  display: inline-block;
  text-align: center;
  padding: 30rpx 0;
}

.map{
  height: 100%;
  width: 100%;
}

#myMap{
  width: 100%;
  height: 100%;
}
