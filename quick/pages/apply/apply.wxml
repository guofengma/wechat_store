<view class="container">
  <view class='header'>我要</view>
  <view class='nav'>
    <view bindtap='provideView' class='nav-item nav-item-first'>提供场地</view>
    <view bindtap='manageView' class='nav-item nav-item-second'>经营货架</view>
    <view bindtap='shelveView' class='nav-item nav-item-third'>货架供货</view>
  </view>
  <view class='join-top'>
    <view class='header-join'>快速加入</view>
  </view>
  <view class='store'>
    <view class='store-item-init'>
      <view class='store-top'>
        <view class='store-address-init'>选择您想担任的角色</view>
      </view>
      <view class='store-content'>
        <view wx:for="{{iconlist}}" wx:key="index" wx:for-item="item">
          <view class='roleimg-logo'>
            <image class='{{item.titleicon}}' src="{{item.titleimg}}" data-roletype='{{index}}' data-storeid='' bindtap='inittapicon'></image>
          </view>
          <view class='listrole'>{{item.role}}</view>
        </view>
      </view>
    </view>

    <view class='join-top'>
      <view class='header-join'>货架列表</view>
      <view class='header-search'>
        <input placeholder='地点' placeholder-class='header-search-input-holder' class='header-search-input' bindinput='setAddress'></input>
        <view class='header-search-p'>
          <image class="header-search-img" src='../../image/search.png' bindtap='searchstore'></image>
        </view>
      </view>
    </view>

    <view class='store-item' wx:for="{{storeList}}" wx:key="index" wx:for-item="item">
      <view class='store-top' bindtap='storedetail' data-storeid='{{item.id}}' data-field='{{item.field}}' data-fieldstate='{{item.fieldstate}}' data-deal='{{item.deal}}' data-dealstate='{{item.dealstate}}' data-supply='{{item.supply}}' data-supplystate='{{item.supplystate}}'>
        <view wx:if="{{ item.storename!=null}}" class='NO'>No.{{item.id}} {{item.storename}}
        </view>
        <view wx:if="{{ item.storename==null}}" class='NO-pengding'>No.{{item.id}}
              <image data-del='0' class='del' src='../../image/del.png' wx:if='{{ item.storename==null}}'></image>
        </view>
      </view>
      <view class='store-content'>
        <view>
          <view class='listrole'>场地方</view>
          <view class='roleimg-logo'>
            <image wx:if='{{item.fieldaddress==null}}' class='roleimg-office opa' src="{{(item.field == user)? '../../image/office.png':'../../image/office.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.field}}' data-roletype='0'></image>
            <image wx:if='{{item.fieldaddress!=null}}' class='roleimg-office' src="{{(item.field == user)? '../../image/office.png':'../../image/office.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.field}}' data-roletype='0'></image>
          </view>
        </view>
        <view>
          <view class='listrole'>经营方</view>
          <view class='roleimg-logo'>
            <image wx:if='{{item.dealaddress==null}}' class='roleimg-manager opa' src="{{(item.deal == user)? '../../image/manager.png':'../../image/manager.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.deal}}' data-roletype='1'></image>
            <image wx:if='{{item.dealaddress!=null}}' class='roleimg-manager' src="{{(item.deal == user)? '../../image/manager.png':'../../image/manager.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.deal}}' data-roletype='1'></image>
          </view>
        </view>
        <view>
          <view class='listrole'>供货方</view>
          <view class='roleimg-logo'>
            <image wx:if='{{item.supplyaddress==null}}' class='roleimg-truck opa' src="{{(item.supply == user)? '../../image/truck.png':'../../image/truck.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.supply}}' data-roletype='2'></image>
            <image wx:if='{{item.supplyaddress!=null}}' class='roleimg-truck' src="{{(item.supply == user)? '../../image/truck.png':'../../image/truck.png'}}" bindtap="tapitem" data-storeid='{{item.id}}' data-idx='{{index}}' data-user='{{item.supply}}' data-roletype='2'></image>
          </view>
        </view>
      </view>

      <view class='store-address'>
        <view class='address'>{{item.fieldaddress== null?'':item.fieldaddress}}</view>
        <view class='address'>{{item.dealaddress== null?'':item.dealaddress}}</view>
        <view class='address'>{{item.supplyaddress== null?'':item.supplyaddress}}</view>
      </view>
    </view>

    <view class="loadmore">
      <image wx:if="{{hasOrder}}" src="../../image/storeloading.gif"></image>
    </view>
  </view>
</view>