page {
  background-color: #fff;
  height: auto;
}

.container {
  padding: 44rpx 40rpx;
}

.header {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 48rpx;
  font-weight: bold;
}

.nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.nav-item {
  width: 204rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 6px;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

.nav-item-first {
  background-color: #5da7f8;
}

.nav-item-second {
  background-color: #bb95e8;
}

.nav-item-third {
  background-color: #f39a98;
}

.join-top {
  margin-top: 76rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.header-join {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.header-search {
  width: 276rpx;
  height: 60rpx;
  position: relative;
}

.header-search-input {
  width: 196rpx;
  height: 60rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
  border-radius: 30rpx 0 0 30rpx;
  text-align: center;
  font-size: 24rpx;
}

.header-search-input-holder {
  font-size: 24rpx;
  color: #bbb;
}

.header-search-p {
  width: 80rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 0 30rpx 30rpx 0;
  background-color: #bebcbc;
  z-index: 9;
}

.header-search-img {
  width: 28rpx;
  height: 30rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}

.store-item {
  /* border: 1px #ECECEC solid; */
  margin-top: 40rpx;
  box-shadow: 0 1px 5px 0 #bebcbc, 0 0 0 0 #bebcbc;
}

.store-item-init{
  border: 1px #5da7f8 solid;
  margin-top: 40rpx;
  /* box-shadow: 0 1px 5px 0 #bebcbc, 0 0 0 0 #bebcbc; */
}

.store-top {
  border-bottom: 1px solid #f4f4f4;
  text-align: center;
  padding: 20rpx 0;
}

.store-name {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.store-address {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

.store-content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  padding: 16rpx 0 20rpx 0;
}

.roleimg-logo {
  height: 84rpx;
}

.roleimg-action {
  height: 56rpx;
  line-height: 56rpx;
}

.roleimg-office {
  width: 88rpx;
  height: 82rpx;
}

.roleimg-manager {
  width: 84rpx;
  height: 82rpx;
}

.roleimg-truck {
  width: 96rpx;
  height: 76rpx;
}

.roleimg-join {
  width: 36rpx;
  height: 38rpx;
}

.roleimg-quit {
  width: 60rpx;
  height: 30rpx;
}

.roleimg-joinAct {
  width: 60rpx;
  height: 56rpx;
}

.loadmore {
  margin-top: 30rpx;
  text-align: center;
}

.loadmore image {
  text-align: center;
  width: 96rpx;
  height: 96rpx;
}

.storeheader {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}