/**index.wxss**/

.container {
  padding: 0 40rpx;
  background-color: #f8f8f8;
  height: 100%;
}

.container .content {
  height: 100%;
}

.container .content .rule {
  background-color: #fff;
  border: 1px #eee solid;
  border-radius: 5px;
}

.container .content .rule .rule_top {
  text-align: center;
  color: #0d8fef;
  padding-top: 6%;
  font-size: 34rpx;
}

.container .content .rule_content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 8% 0 10%;
}

.container .content .rule_content .rule_item {
  text-align: center;
}

.container .content .rule_content .rule_item image {
  width: 120rpx;
  height: 120rpx;
}

.container .content .rule_content .rule_item .rule_tit {
  font-size: 28rpx;
  line-height: 51rpx;
  color: #333;
}

.container .content .rule_content .rule_item .rule_info {
  font-size: 24rpx;
  color: #999;
}

.container .content .buy {
  margin-top: 6%;
  text-align: center;
  height: 40%;
  position: relative;
  border: 1px #eee solid;
  border-radius: 5px;
  background-color: #fff;
}

.container .content .buy .noscan {
  position: absolute;
  bottom: 20rpx;
  right: 21rpx;
  font-size: 14px;
  color: #0d8fef;
  z-index: 2;
}

.container .content .shadow {
  box-shadow: -2px 0 10px #999, 2px 0 10px #999, 0 -2px 10px #999, 0 2px 10px #999;
  -webkit-box-shadow: -2px 0 10px #999, 2px 0 10px #999, 0 -2px 10px #999, 0 2px 10px #999;
}

.container .content .buy image {
  width: 148rpx;
  height: 148rpx;
}

.container .content .buy .store {
  text-align: left;
}

.container .content .buy .store {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  padding: 30rpx 0 0 36rpx;
  color: #999;
  position: relative;
  z-index: 1000;
}

.container .content .buy .bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.container .content .buy .store image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.container .content .buy .cart {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.container .content .buy .cart image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
}

.container .content .buy .cart .num {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  background-color: #f02e51;
  width: 38rpx;
  height: 38rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  font-family: PingFangSC-Regular;
  color: #fff;
  letter-spacing: -0.41px;
}

.container .content .buy .scan_tit {
  font-size: 34rpx;
  color: #0d8fef;
  margin-bottom: 30rpx;
}

.container .content .buy .scanCode {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -30%);
  z-index: 2;
}

.container .content .buy .scanCode .scan_img {
  position: relative;
}

.container .content .buy .scanCode .scan_tit {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.container .content .buy .scanCode .num {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  background-color: #f02e51;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  font-family: PingFangSC-Regular;
  color: #fff;
  letter-spacing: -0.41px;
}

.container .content .buy .homebg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.activity {
  width: 576rpx;
  height: 144rpx;
  position: absolute;
  bottom: 4%;
  left: 50%;
  transform: translateX(-50%);
}
