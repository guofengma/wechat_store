page {
  background-color: #fff;
}

.container {
  background-color: #fff;
}

.header {
  text-align: center;
  color: #fff;
  background-color: #0d8fef;
  padding: 40rpx;
}

.name {
  font-size: 18px;
}

.address {
  font-size: 14px;
  margin-top: 10rpx;
}

.content {
  padding: 40rpx;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 60rpx;
}

.section_title {
  font-size: 30rpx;
  color: #333;
}

.section_input {
  width: 80%;
  border-bottom: 1px solid #ececec;
}

.section-phone{
  position: relative;
}

.getPhoneNumber{
  position: absolute;
  right: 0;
  font-size: 24rpx;
  line-height: 24rpx;
  padding: 15rpx 30rpx;
  border: 1px solid #0D8FEF;
  background-color: #fff;
  color: #0D8FEF;
  top: 50%;
  transform: translateY(-60%);
  z-index: 1000;
}

.btn {
  width: 400rpx;
  height: 80rpx;
  background-color: #0d8fef;
  margin-top: 225rpx;
  font-size: 32rpx;
  color: #fff;
}

.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0,0,0, 0.3);
}

.register{
  width: 100%;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  height: 600rpx;
  box-sizing: border-box;
  padding: 0 60rpx;
}

.register_title{
  margin-top: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.register .section__title{
  font-size: 30rpx;
  font-weight: bold;
}

.btn-area{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 121rpx;
}

.button{
  width: 280rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #ECECEC;
}

.button:nth-of-type(1){
  margin-right: 70rpx;
}

.getPhoneNumber{
  position: absolute;
  right: 0;
}

