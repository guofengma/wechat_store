.container {
  background-color: #fff;
}

.topBg {
  width: 100%;
  height: 130rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1px solid #ececec;
}

.btn {
  width: 112rpx;
  height: 50rpx;
  border: 1px solid #0d8fef;
  border-radius: 4px;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #0D8FEF;
}

.success{
  width: 112rpx;
  height: 50rpx;
  border-radius: 4px;
  text-align: center;
  line-height: 50rpx;
  border: 1px solid #999999;
  font-size: 24rpx;
  color: #333333;
}
