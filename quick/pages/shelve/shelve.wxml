<form class="forms" bindsubmit="formSubmit">
  <view class='container'>
    <view class='item'>
      <label class='name'>地<text style="opacity:0;">隐藏</text>址 </label>
      <view class='input-border'>
          <input type='text' name="address"></input>
      </view>
    </view>  
    <view class='item'>
      <label class='name'>公司名称 </label>
      <view class='input-border'>
          <input type='text' name="classify"></input>
      </view>
    </view>
    <view class='item'>
      <label class='name'>公司人数 </label>
      <view class='input-border'>
          <input type='number' name="classify"></input>
      </view>
    </view>
    <view class='item'>
      <label class='name'>联系人<text style="opacity:0;">隐</text> </label>
      <view class='input-border'>
          <input type='text' name="person"></input>
      </view>
    </view>
    <view class='item'>
      <label class='name'>联系电话 </label>
      <view class='input-border'>
          <input type='number' name="phoneno"></input>
      </view>
    </view>
    <view class='item'>
      <label class='name'>验证码<text style="opacity:0;">隐</text> </label>
      <view class='input-border'>
          <input type='number' name="check"></input>
          <view catchtap='sendmsg' class='send'>验证码</view>
      </view>
    </view>
    <view class='item'>
      <label class='name'>费用情况 </label>
      <view class='input-border'>
          <input type='number' name="phoneno"></input>
      </view>
    </view>
    <view class='item'>
      <label class='upload-title'>场地照片 </label>
      <view class='upload-cont'>
          <image class='upload' bindtouchstart="imageView" data-idx="previewImg1" src="{{previewImg1 ? previewImg1 : imageDefault}}"></image>
          <image class='upload' bindtouchstart="imageView" data-idx="previewImg2" src="{{previewImg2 ? previewImg2 : imageDefault}}"></image>
          <image class='upload' bindtouchstart="imageView" data-idx="previewImg3" src="{{previewImg3 ? previewImg3 : imageDefault}}"></image>
      </view>
    </view>
    <button class='button' form-type='submit'>提交</button>  
  </view>
</form>
