<view class="container">
  <view class='header'>
    <view class='name'>{{info.name}}</view>
    <view class='address'>{{info.address}}</view>
  </view>
  <view class='content'>
    <view class="section">
      <view class="section__title">服务</view>
      <view class='section_input'>{{info.name}}</view>
    </view>
    <view class='section'>
      <label class='section_title'>价格</label>
      <view class='section_input'>{{info.price}}</view>
    </view>
    <view class="section">
      <view class="section__title">时间</view>
      <view class='section_input'>{{info.time}}</view>
    </view>
    <view class='reSend'>
      <button class='re-btn re-send' data-orderstate='1'>完成</button>
      <button bindtap='cancelOrder' class='re-btn' data-orderstate='0'>取消</button>
    </view>
  </view>
</view>